<h3>Archive</h3>
<div class="container-fluid content-wrapper">
  <div ng-repeat="article in articles">
    <h5>
      <span ng-click="removeArticle(article.id, $index)" ng-show="isLoggedIn()" class="glyphicon glyphicon-remove" aria-hidden="true"></span>
      <a href="/article/{{article.id}}">{{article.title}}</a>
      <span class="archive-time">: {{formatTime(article.created_at)}}</span>
      <a ng-href="/dashboard/{{article.id}}/edit"><span ng-show="isLoggedIn()" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
    </h5>
  </div>
</div>
